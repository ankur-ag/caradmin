<div class="page app" id="page">
  <!-- Begin .header -->
  <header class="header cf" role="banner">
    <md-content>
      <md-toolbar class="md-accent">
        <h2 class="md-toolbar-tools">
        <span class="header-btn-menu icon-menu" aria-label="Menu"></span>
        <span>Breeze Admin</span>
      </h2>
      </md-toolbar>
    </md-content>
  </header>

  <div>
    <header class="block-header block-header__bordered">
      <h1 class="md-heading-1">Cars</h1>
    </header>
    <section layout="column" layout-gt-sm="row" layout-margin>
      <div flex="40" flex-order-sm="2">
        <md-content>
          <md-list>
            <md-item ng-repeat="v in vehicles track by v.id">
              <md-item-content>
                <div class="md-tile-left">
                  <img ng-src="http://i.imgur.com/L90ERLO.jpg?2" class="face" alt="Toyota Prius">
                </div>
                <div class="md-tile-content">
                  <h3><a ui-sref="vehicles.reservation({id: v.id, reservation_id: v.reservation.id})">{{v.name}}</a></h3>
                  <h4>{{v.model}}</h4>
                  <h4 ng-show="v.reservation.start_date">Reserved on {{v.reservation.start_date}} by {{v.reservation.member.name}}</h4>
                  <h4 ng-show="v.reservation.occupied_at">Occupied on {{v.reservation.occupied_at}}</h4>
                  <h4 ng-show="v.reservation.scheduled_to_return_at">Scheduled to be returned on {{v.reservation.scheduled_to_return_at}}</h4>
                  <h4 ng-show="v.reservation.returned_at">Returned on {{v.reservation.returned_at}}</h4>
                  <a ui-sref="vehicles.reservation({id: v.id, reservation_id: v.reservation.id})">
                    <md-button class="md-primary">{{ v.reservation ? "Update" : "Add"}}</md-button>
                  </a>
                  <core-icon src="//www.polymer-project.org/images/icons/android.svg"></core-icon>
                </div>
              </md-item-content>
            </md-item>
          </md-list>
        </md-content>
      </div>
      <div flex="45" flex-gt-md="40" flex-order-sm="3" layout="row" layout-align="center" class="block-negative-vert-offset" ui-view>
      </div>
    </section>
  </div>
</div>